<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragmentOwner"
>



    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_view"
        />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/top_view"
        app:rowCount="4"
        android:layout_marginTop="-120dp"
        android:layout_marginBottom="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_margin="9dp"
            app:layout_row="1"
            app:layout_column="0"
            android:onClick="onPetPost">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"


                >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="17dp"
                >
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="right">
                    <ImageView
                        android:id="@+id/imageViewPet"
                        android:layout_marginTop="15dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/lpogofinalnobg"
                        android:layout_gravity="center_horizontal"
                        /></LinearLayout>


                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:layout_marginTop="25dp"
                    >
                    <EditText
                        android:layout_marginLeft="15dp"

                        android:gravity="center"
                        android:id="@+id/editTextPetName"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mandy"
                        android:layout_gravity="center_horizontal"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginRight="20dp"
                        />






                </LinearLayout>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent">
                        <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="10dp"
                        android:text="Age"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"

                        />

                        <EditText
                            android:id="@+id/editTextAge"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="date"
                            app:layout_column="0"
                            app:layout_row="1"
                            android:layout_marginRight="50dp"/></LinearLayout>


                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        >
>

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="10dp"
                            android:text="Color"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center"

                            />

                        <EditText
                            android:id="@+id/editTextColor"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="date"
                            app:layout_column="0"
                            app:layout_row="1"
                            android:layout_marginRight="50dp"/>




                </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="10dp"
                            android:text="Sex"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center"

                            />

                        <EditText
                            android:id="@+id/editTextSex"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="date"
                            app:layout_column="0"
                            app:layout_row="1"
                            android:layout_marginRight="50dp"/></LinearLayout>


                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        >
                        >

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="10dp"
                            android:text="Breed"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center"

                            />

                        <EditText
                            android:id="@+id/editTextBreed"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="date"
                            app:layout_column="0"
                            app:layout_row="1"
                            android:layout_marginRight="50dp"/>




                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="20dp"
                        android:text="Note"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"

                        />

                    <EditText
                        android:id="@+id/editTextSpecialNote"
                        android:layout_width="237dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:ems="10"
                        android:inputType="text"
                        app:layout_column="0"
                        app:layout_row="1" />

                </LinearLayout>


                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="9dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Save"
                    android:textSize="18sp"
                    />


            </LinearLayout>
        </androidx.cardview.widget.CardView>




    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Pet"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="36sp"
        android:layout_centerHorizontal="true"

        />


</RelativeLayout>